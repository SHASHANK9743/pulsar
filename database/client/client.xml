<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="pony">
        <createTable tableName="client">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="email" type="varchar(100)"/>
            <column name="contact_no" type="varchar(10)"/>
            <column name="address_line_1" type="varchar(255)"/>
            <column name="address_line_2" type="varchar(255)"/>
            <column name="address_line_3" type="varchar(255)"/>
            <column name="pincode" type="varchar(6)"/>
            <column name="city" type="varchar(100)"/>
            <column name="state" type="varchar(100)"/>
            <column name="country" type="varchar(100)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>